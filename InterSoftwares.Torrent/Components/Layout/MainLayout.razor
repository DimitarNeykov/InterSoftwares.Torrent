@inherits LayoutComponentBase
@using InterSoftwares.Torrent.Services
@inject MudBlazor.IDialogService Dialogs

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="height: 100vh;">
        @Body
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            DialogBridge.Initialize(Dialogs);
        }
    }
}